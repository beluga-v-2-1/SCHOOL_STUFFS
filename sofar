def end():
    print("thanks for using my program")
    exit()
    
def ty1( message ) :
    for i in message :
        print(i,end="")
        time.sleep(0.07)
    print()
    
def ty2(message):
    for i in message :
        print(i,end="")
        time.sleep(0.01)
    print()
    
def ty3(message):
    for i in message :
        print(i,end="")
        time.sleep(0.001)
    print()
    
